{
    "trading_bot": {
        "name": "AI_Trading_Bot",
        "version": "1.0.0",
        "description": "AI-driven trading bot for backtesting strategies"
    },
    
    "backtesting": {
        "initial_capital": 100000.0,
        "commission_rate": 0.001,
        "slippage": 0.0001,
        "enable_short_selling": false,
        "start_date": "2020-01-01",
        "end_date": "2023-12-31"
    },
    
    "risk_management": {
        "max_position_size": 0.02,
        "max_drawdown": 0.20,
        "stop_loss_pct": 0.05,
        "take_profit_pct": 0.10,
        "max_daily_loss": 0.05,
        "position_sizing_atr": 2.0
    },
    
    "strategies": {
        "SMA_CROSSOVER": {
            "short_period": 10,
            "long_period": 30,
            "description": "Simple Moving Average Crossover Strategy"
        },
        "MEAN_REVERSION": {
            "lookback_period": 20,
            "std_dev_threshold": 2.0,
            "description": "Mean Reversion Strategy"
        }
    },
    
    "logging": {
        "log_file": "./logs/trading_bot.log",
        "min_level": "INFO",
        "console_output": true,
        "file_output": true,
        "timestamp": true,
        "max_file_size_mb": 10
    },
    
    "reporting": {
        "output_format": "HTML",
        "output_directory": "./reports",
        "include_charts": true,
        "include_trade_details": true,
        "chart_format": "PNG"
    },
    
    "data": {
        "csv_format": {
            "timestamp_column": "timestamp",
            "open_column": "open",
            "high_column": "high",
            "low_column": "low",
            "close_column": "close",
            "volume_column": "volume",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "validation": {
            "check_missing_values": true,
            "check_price_consistency": true,
            "min_volume": 0.0
        }
    }
}
