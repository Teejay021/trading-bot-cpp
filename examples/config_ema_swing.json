{
    "trading_bot": {
        "name": "EMA_Swing_Trading_Bot",
        "version": "1.0.0",
        "description": "EMA crossover strategy for swing trading"
    },
    
    "backtesting": {
        "initial_capital": 75000.0,
        "commission_rate": 0.001,
        "slippage": 0.0003,
        "enable_short_selling": false,
        "start_date": "2019-01-01",
        "end_date": "2023-12-31"
    },
    
    "risk_management": {
        "max_position_size": 0.025,
        "max_drawdown": 0.18,
        "stop_loss_pct": 0.04,
        "take_profit_pct": 0.12,
        "max_daily_loss": 0.05,
        "position_sizing_atr": 1.8
    },
    
    "strategies": {
        "EMA_CROSSOVER": {
            "short_period": 12,
            "long_period": 26,
            "signal_period": 9,
            "description": "EMA crossover with signal line (similar to MACD)"
        }
    },
    
    "logging": {
        "log_file": "./logs/ema_swing_bot.log",
        "min_level": "INFO",
        "console_output": true,
        "file_output": true,
        "timestamp": true,
        "max_file_size_mb": 10
    },
    
    "reporting": {
        "output_format": "HTML",
        "output_directory": "./reports/ema_swing",
        "include_charts": true,
        "include_trade_details": true,
        "chart_format": "PNG"
    },
    
    "data": {
        "csv_format": {
            "timestamp_column": "timestamp",
            "open_column": "open",
            "high_column": "high",
            "low_column": "low",
            "close_column": "close",
            "volume_column": "volume",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "validation": {
            "check_missing_values": true,
            "check_price_consistency": true,
            "min_volume": 0.0
        }
    },
    
    "api": {
        "default_provider": "yahoo_finance",
        "default_symbol": "AAPL",
        "default_interval": "daily",
        "cache_enabled": true,
        "auto_save_csv": true,
        "csv_output_directory": "./data/ema_swing"
    }
}

