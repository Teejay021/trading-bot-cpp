{
    "trading_bot": {
        "name": "RSI_Scalping_Bot",
        "version": "1.0.0",
        "description": "RSI-based scalping strategy for short-term trades"
    },
    
    "backtesting": {
        "initial_capital": 25000.0,
        "commission_rate": 0.0005,
        "slippage": 0.0002,
        "enable_short_selling": true,
        "start_date": "2022-01-01",
        "end_date": "2023-12-31"
    },
    
    "risk_management": {
        "max_position_size": 0.03,
        "max_drawdown": 0.25,
        "stop_loss_pct": 0.015,
        "take_profit_pct": 0.05,
        "max_daily_loss": 0.06,
        "position_sizing_atr": 2.0
    },
    
    "strategies": {
        "RSI": {
            "period": 14,
            "oversold_threshold": 30,
            "overbought_threshold": 70,
            "description": "RSI oscillator strategy for overbought/oversold conditions"
        }
    },
    
    "logging": {
        "log_file": "./logs/rsi_scalping_bot.log",
        "min_level": "INFO",
        "console_output": true,
        "file_output": true,
        "timestamp": true,
        "max_file_size_mb": 10
    },
    
    "reporting": {
        "output_format": "HTML",
        "output_directory": "./reports/rsi_scalping",
        "include_charts": true,
        "include_trade_details": true,
        "chart_format": "PNG"
    },
    
    "data": {
        "csv_format": {
            "timestamp_column": "timestamp",
            "open_column": "open",
            "high_column": "high",
            "low_column": "low",
            "close_column": "close",
            "volume_column": "volume",
            "date_format": "%Y-%m-%d %H:%M:%S"
        },
        "validation": {
            "check_missing_values": true,
            "check_price_consistency": true,
            "min_volume": 100.0
        }
    },
    
    "api": {
        "default_provider": "yahoo_finance",
        "default_symbol": "NVDA",
        "default_interval": "daily",
        "cache_enabled": true,
        "auto_save_csv": true,
        "csv_output_directory": "./data/rsi_scalping"
    }
}

